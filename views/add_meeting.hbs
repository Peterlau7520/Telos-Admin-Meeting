<script type="text/javascript">
    $(document).ready(function () {
        console.log("Dom is ready");
          var wrapper = $(".documents_wrapper")
        var x = 0;
        var max_fields = 5;
        var add_button = $(".add_documents");
        $(add_button).click(function (e) { //on add input button click
            e.preventDefault();
            if (x < max_fields) { //max input box allowed
                x++; //text box increment
                console.log(x);
                $(wrapper).append(`<input type="file" name="filefield"><br />`); //add choose file box
            }
        });
        var polls_array = [];
        $("#open_model").click(function () {
            $('#poll_form')[0].reset();
            $("#poll").modal();
        
        })
        
        $("#close_model").click(function () {
            
            $("#poll").modal("hide");
            var form_data_array = $("#poll_form").serializeArray();
            console.log(form_data_array);
            var form_json = {};
            form_data_array.forEach(function (obj) {
                form_json[obj.name] = obj.value;
            });
            polls_array.push(form_json);
            {{!-- alert(JSON.stringify(polls_array)) --}}
            $.ajax({
                url: "/addPollsOfMeeting",
                data: { "pollsofmetting": JSON.stringify(polls_array) },
                type: 'POST',
                success: function (data, textStatus, jqXHR) 
                {
                    console.log(data.meetingsPollData);
                        var html ='';
                        for(i=0;i<data.meetingsPollData.length ; i++)
                        {
                                html+=`<div class="panel-group">
                                    <div class="panel panel-default" '>
                                        <div class="panel-heading">
                                            <a style='color:black' data-toggle="collapse" href="#collapse${i}">
                                        <h4 class="panel-title">
                                            ${data.meetingsPollData[i].title}
                                        </h4>
                                        </div>
                                        </a>
                                        <div id="collapse${i}" class="panel-collapse collapse">
                                        <div class="panel-body">
                                                  <p>Project Name:${data.meetingsPollData[i].project_name}</p>
                                                  <p>Project_Name_Chinese :${data.meetingsPollData[i].project_name_chinese}</p >
                                                  <p>Summary :${data.meetingsPollData[i].summary}</p>
                                                  <p>Summary_chinese :${data.meetingsPollData[i].summary_chinese}</p>
                                        </div>
                                    </div>
                                    </div>`
                        }
                    $('.panel-wrapper-custom').html(html);
                }
            })
        })
    })
</script>