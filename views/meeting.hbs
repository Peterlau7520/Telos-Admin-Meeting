        </div>
    </div>
    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Meeting</a>
                </div>
                <div class="collapse navbar-collapse">
                </div>
            </div>
        </nav>
        <div class="row page-wrapper">
            <div class="side-menu">
                <nav class="navbar navbar-default" role="navigation">
                    <!-- Main Menu -->
                    <div class="side-menu-container">
                        <ul class="nav navbar-nav" >
                            <li class="panel panel-default" id="dropdown">
                                <a data-toggle="collapse" href="#dropdown-lvl1">
                                </span>Upcoming Meetings<span class="caret"></span>
                        </a>
                        <div id="dropdown-lvl1" class="panel-collapse collapse">
                            <div class="panel-body">
                                <ul class="nav navbar-nav" role="tablist">
                                    {{#each meetingsData}}

                                    {{#if @key}}
                                    <li role="presentation" >
                                        {{else}}
                                    <li role="presentation" class="active">
                                        {{/if}}
                                        <a href="#tab_{{@key}}" aria-controls="home" role="tab" data-toggle="tab">{{title}}</a>
                                    </li>
                                    {{/each}}

                                </ul>
                            </div>
                        </div>
                    </li>
                    <li><a href="#">Past Meetings</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
        <div class="meeting-btn">
            <a href="/addMeeting" class="btn btn-primary">Add a Meeting</a>
        </div>      
    </div>
    <!-- Main Content -->
    <div class="tab-content tab-wraper">
        {{#each meetingsData}}
        {{#if @key}}
        <div role="tabpanel" class="tab-pane" id="tab_{{@key}}">
            {{else}}
            <div role="tabpanel" class="tab-pane active" id="tab_{{@key}}">
                {{/if}}
                <div class="div-wrapper">
                    <form role="form">
                        <div class="form-group col-sm-6">
                            <label>Meeting Title</label>
                            <input type="text" class="form-control" value="{{title}}">
                        </div>
                        <div class="form-group col-sm-6">
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-sm-6">
                            <label>Meeting Start Time</label>
                            <input type="datetime-local" class="form-control" value="{{startTime}}">
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Meeting End Time</label>
                            <input type="datetime-local" class="form-control" value="{{endTime}}">
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-sm-6">
                            <label>Venue</label>
                            <input type="text" class="form-control" value="{{venue}}">
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Agenda</label>
                            <table class="table table-bordered">
                                <tr>
                                    <th>ID</th>
                                    <th>Document name</th>
                                </tr>
                                <tr>
                                    <td>1</td>
                                    <td>Agends.pdf</td>
                                </tr>
                            </table>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
                <div class="div-wrapper">
                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                        {{#each polls}}
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#poll_{{@key}}" aria-expanded="true" aria-controls="collapseOne">
                                        {{pollName}}
                                    </a>
                                </h4>
                            </div>
                            {{#if @key}}
                            <div id="poll_{{@key}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                                {{else}}
                                <div id="poll_{{@key}}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                    {{/if}}
                                    <div class="panel-body">
                                        <form role="form">
                                            <div class="form-group col-sm-12">
                                                <label>Summary</label>
                                                <textarea class="form-control">
                                                    {{summary}}
                                                </textarea>
                                            </div>

                                            <div class="clearfix"></div>
                                            <div class="form-group col-sm-6">
                                                <label>Voting option</label>
                                                <select class="form-control">
                                                    <option value="yes">Yes</option>
                                                    <option value="no">No</option>
                                                    <option value="abstain">Abstain</option>
                                                </select>
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label>Uploaded Documents</label>
                                                <table class="table table-bordered">
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Document name</th>
                                                    </tr>
                                                    <tr>
                                                        <td>1</td>
                                                        <td>Agends.pdf</td>
                                                    </tr>
                                                </table>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="form-group col-sm-6">
                                                <label>POll Results</label>
                                                <table class="table table-bordered">
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Document name</th>
                                                    </tr>
                                                    <tr>
                                                        <td>1</td>
                                                        <td>Agends.pdf</td>
                                                    </tr>
                                                </table>
                                            </div>
                                            <div class="form-group col-sm-6">

                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div> 
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a href="#">
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Company
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Portfolio
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Blog
                            </a>
                        </li>
                    </ul>
                </nav>
                <p class="copyright pull-right">
                    &copy; <script>document.write(new Date().getFullYear())</script> <a href="http://www.creative-tim.com">Creative Tim</a>, made with love for a better web
                </p>
            </div>
        </footer>
    </div>
</div>
