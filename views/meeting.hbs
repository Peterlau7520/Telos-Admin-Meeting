<script type="text/javascript">
    $(document).ready(function () {
        console.log("Dom is ready");
        function convertSerializeArrayToJson(serilizeArray) {
            var form_json = {};
            serilizeArray.forEach(function (obj) {
                form_json[obj.name] = obj.value;
            });
            return form_json;
        }
        var originalData = '{{{stringify meetingsData}}}';
        originalData = JSON.parse(originalData);

{{!-- $('.meeting_li').click(function()
{
     $('.save_meeting').show()  
}) --}}
        $(".edit_meeting").click(function()
        {
            $('.form-control').show()
            $('.display_meetings_detail').hide()
            $('.save_meeting').show()
            $(this).hide()
        })
        $(".save_meeting").click(function () {

            $('.display_meetings_detail').show()
               $('.form-control').hide()
             $('.save_meeting').hide()
              $('.edit_meeting').show()
            var index = $(this).data('id');
            var meetingform = $("#edit_meeting_" + index).serializeArray();
            var meetingData = convertSerializeArrayToJson(meetingform);
            meetingData.polls = [];
            originalData[index].polls.forEach(function (value, key) {
                var poll_form = $("#poll_form_" + index + '_' + key).serializeArray();
                meetingData.polls.push(convertSerializeArrayToJson(poll_form));
            });
            $.ajax({
                url: "/editMeeting",
                data: { "metting": JSON.stringify(meetingData) },
                type: 'POST',
                dataType: "json",
                success: function (data, textStatus, jqXHR) 
                {
                       $("[name = title]").val(data.title)
                       $('#title_div').text(data.title)
                       $("[name = start_time ]").val(data.start_time)
                       $('#stime_div').text(data.start_time)
                       $("[name = end_time]").val(data.end_time)
                       $('#etime_div').text(data.end_time)
                       $("[name = venue]").val(data.venue)
                       $('#venue_div').text(data.venue)
                        console.log(data.title)
                }

            })
        });
         $(".custom_scroll_wrap").mCustomScrollbar();
    });
</script>
